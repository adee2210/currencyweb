{% extends 'frontend/layout.html.twig' %}

{% block body %}
<div class="row">
    <div class="col-md-12">
        <h3 class="lbl-from">1 {{ default }} equals</h3>
        <h1 class="lbl-to">{{ rate }} {{ tosymbol[0] }}</h1>
        <div class="input-group mb-3">
            <input type="text" class="form-control from-amount col-md-2" value="1">
            <select class="custom-select from-symbol col-md-1">
                {% for symbol in fromsymbol %}
                <option value="{{ symbol }}"{% if symbol == default%} selected=""{% endif %}>{{ symbol }}</option>
                {% endfor %}
            </select>
        </div>
        <div class="input-group">
            <input type="text" class="form-control to-amount col-md-2" value="{{ rate }}">
            <select class="custom-select to-symbol col-md-1">
                {% for symbol in tosymbol %}
                <option value="{{ symbol }}">{{ symbol }}</option>
                {% endfor %}
            </select>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
	{{ parent() }}
	<script type="text/javascript" src="{{ asset('js/exchanger.js') }}"></script>
	<script type="text/javascript">
		$(function(){
            new exchanger({{ rate }});
		});
	</script>
{% endblock %}